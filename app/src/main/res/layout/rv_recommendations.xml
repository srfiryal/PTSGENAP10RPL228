<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rv_layout_rvRecommendations"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_restaurant_rvRecommendations"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_gofood"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/tv_restaurant_rvRecommendations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/img_restaurant_rvRecommendations"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_location_rvRecommendations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_toRightOf="@id/img_restaurant_rvRecommendations"
            android:layout_below="@id/tv_restaurant_rvRecommendations"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>